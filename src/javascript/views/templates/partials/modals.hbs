<div class="modal" id="about">
  <h2>{{assets.text.about.title}}</h2>
  <p>{{assets.text.about.content}}</p>
  <div id="close-button"><img src="{{ image 'plus.png' }}"></div>
  <div class="close-modal-text-button"> Close </div>
</div>
<div class="modal" id="address-not-found">
